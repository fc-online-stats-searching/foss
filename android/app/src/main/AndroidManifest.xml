<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.foss.foss">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FossApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_foss_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_foss_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foss"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".feature.matchsearching.recent.NewRecentMatchActivity"
            android:exported="false"
            android:label="@string/title_activity_new_recent_match"
            android:theme="@style/Theme.Foss" />
        <activity
            android:name=".feature.matchsearching.relative.detail.RelativeMatchDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".feature.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>